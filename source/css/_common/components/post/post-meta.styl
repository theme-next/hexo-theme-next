.posts-expand .post-meta {
  margin: 3px 0 60px 0;
  color: $grey-dark;
  text-align: center;
  font-family: $font-family-posts;

  .post-description {
    margin-top: 2px;
    font-size: $font-size-small;
  }

  time {
    border-bottom: 1px dashed $grey-dark;
    cursor: help;
  }
}

.post-meta .post-meta-item + .post-meta-item::before {
  margin: 0 0.5em;
  content: '|';
}

.post-meta .post-meta-item {
  font-size: $font-size-smallest;
}

.post-meta-divider {
  margin: 0 0.5em;
}

.post-meta-item-icon {
  margin-right: 3px;

  +tablet-mobile() {
    display: inline-block;
  }
}

.post-meta-item-text {
  +tablet-mobile() {
    display: none;
  }
}
