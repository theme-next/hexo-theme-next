.post-gallery {
  display: table;
  width: 100%;
  border-collapse: separate;
  table-layout: fixed;
}

.post-gallery-row {
  display: table-row;
}

.post-gallery .post-gallery-img {
  display: table-cell;
  border: none;
  vertical-align: middle;
  text-align: center;

  img {
    max-width: 100%;
    max-height: 100%;
    border: none;
  }
}

.fancybox-close, .fancybox-close:hover {
  border: none;
}
