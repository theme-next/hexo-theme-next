.post-nav {
  display: table;
  margin-top: 15px;
  width: 100%;
  border-top: 1px solid $gainsboro;
}

.post-nav-divider {
  display: table-cell;
  width: 10%;
}

.post-nav-item {
  display: table-cell;
  padding: 10px 0 0 0;
  width: 45%;
  vertical-align: top;

  a {
    position: relative;
    display: block;
    line-height: 1.6;
    font-size: $font-size-small;
    color: $link-color;
    border-bottom: none;

    &:hover {
      color: $link-hover-color;
      border-bottom: none;
    }

    &:active { top: 2px; }
  }

  .fa {
    font-size: $font-size-smallest;
    margin-right: 5px;
  }
}

.post-nav-next {
  a { padding-left: 5px; }
}

.post-nav-prev {
  text-align: right;

  a { padding-right: 5px; }

  .fa { margin-left: 5px; }
}
