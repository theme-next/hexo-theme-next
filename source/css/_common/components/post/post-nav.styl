.post-nav {
  display: table;
  margin-top: 15px;
  width: 100%;
  border-top: 1px solid $gainsboro;
}

.post-nav-divider {
  display: table-cell;
  width: 10%;
}

.post-nav-item {
  display: table-cell;
  padding: 10px 0 0 0;
  width: 45%;
  vertical-align: top;

  a {
    position: relative;
    display: block;
    border-bottom: none;
    color: $link-color;
    font-size: $font-size-small;
    line-height: 1.6;

    &:hover {
      border-bottom: none;
      color: $link-hover-color;
    }

    &:active {
      top: 2px;
    }
  }

  .fa {
    margin-right: 5px;
    font-size: $font-size-smallest;
  }
}

.post-nav-next {
  a {
    padding-left: 5px;
  }
}

.post-nav-prev {
  text-align: right;

  a {
    padding-right: 5px;
  }

  .fa {
    margin-left: 5px;
  }
}
