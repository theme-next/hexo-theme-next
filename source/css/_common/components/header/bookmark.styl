.book-mark-link {
  border-bottom: none;
  color: unquote(hexo-config('bookmark.color'));
  display: inline-block;
  left: 30px;
  position: fixed;
  top: -10px;
  transition: .3s;

  +tablet-mobile() {
    display: none;
  }
  &::before {
    content: "\f02e";
    font-family: $font-family-icons;
    font-size: 32px;
    line-height: 1;
  }
}

.book-mark-link:hover, .book-mark-link-fixed {
  top: -2px;
}
