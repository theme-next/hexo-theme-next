// fix bug using algolia search's CDN
.ais-search-box--magnifier svg {
  display: none !important;
}

.ais-search-box--reset svg {
  display: none !important;
}

.algolia-pop-overlay {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2080;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);

  +mobile() {
    display: none;
  }
}

.algolia-popup {
  position: fixed;
  top: 10%;
  left: 50%;
  z-index: 9999;
  display: none;
  overflow: hidden;
  margin-left: -350px;
  padding: 0;
  width: 700px;
  height: 80%;
  border-radius: 5px;
  background: #fff;
  color: #333;

  +mobile() {
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    border-radius: 0;
  }

  .popup-btn-close {
    position: absolute;
    top: 10px;
    right: 14px;
    padding-left: 15px;
    border-left: 1px solid #eee;
    color: #4EBD79;
    text-transform: uppercase;
    font-weight: bold;
    font-size: 14px;
    cursor: pointer;

    .fa {
      color: $grey-dark;
      font-size: 18px;
    }

    &:hover .fa {
      color: $black-deep;
    }
  }
}

.algolia-search {
  padding: 10px 15px 5px;
  max-height: 50px;
  border-bottom: 1px solid #ccc;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  background: $whitesmoke;
}

.algolia-search-input-icon {
  display: inline-block;
  width: 20px;

  .fa {
    font-size: 18px;
  }
}

.algolia-search-input {
  display: inline-block;
  width: calc(90% - 20px);

  input {
    padding: 5px 0;
    width: 100%;
    outline: none;
    border: none;
    background: transparent;
  }
}

.algolia-powered {
  float: right;

  img {
    display: inline-block;
    height: 18px;
    vertical-align: middle;
  }
}

.algolia-results {
  position: relative;
  overflow: auto;
  padding: 10px 30px;
  height: calc(100% - 50px);

  hr {
    margin: 10px 0;
  }

  .highlight {
    margin: 0;
    padding: 0 2px;
    color: red;
    font-style: normal;
    font-size: inherit;
  }
}

.algolia-hits {
  margin-top: 20px;
}

.algolia-hit-item {
  margin: 15px 0;
}

.algolia-hit-item-link {
  display: block;
  border-bottom: 1px dashed #ccc;
  the-transition();
}

.algolia-pagination {
  .pagination {
    margin: 40px 0px;
    padding: 0;
    border-top: none;
    opacity: 1;
  }

  .pagination-item {
    display: inline-block;
  }

  .page-number {
    border-top: none;

    &:hover {
      border-bottom: 1px solid $black-deep;
    }
  }

  .current .page-number {
    @extend .pagination .page-number.current;
  }

  .disabled-item {
    visibility: hidden;
  }
}
