.local-search-pop-overlay {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2080;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

.local-search-popup {
  position: fixed;
  top: 10%;
  left: 50%;
  z-index: 9999;
  display: none;
  margin-left: -350px;
  padding: 0;
  width: 700px;
  height: 80%;
  border-radius: 5px;
  background: #fff;
  color: #333;

  +mobile() {
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    border-radius: 0;
  }

  ul.search-result-list {
    margin: 0 5px;
    padding: 0;
  }

  p.search-result {
    padding: 5px 0;
    border-bottom: 1px dashed #ccc;
  }

  a.search-result-title {
    font-weight: bold;
  }

  .search-keyword {
    border-bottom: 1px dashed #f00;
    color: #f00;
    font-weight: bold;
  }

  .local-search-header {
    padding: 5px;
    height: 36px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    background: #f5f5f5;
  }

  #local-search-result {
    position: relative;
    overflow: auto;
    padding: 5px 25px;
    height: calc(100% - 55px);
  }

  .local-search-input-wrapper {
    position: absolute;
    display: inline-block;
    padding: 0 5px;
    width: calc(100% - 90px);
    height: 36px;
    line-height: 36px;
  }

  .local-search-input-wrapper input {
    display: block;
    padding: 8px 0;
    width: 100%;
    height: 20px;
    outline: none;
    border: none;
    background: transparent;
    vertical-align: middle;
  }

  .search-icon, .popup-btn-close {
    display: inline-block;
    padding-right: 10px;
    padding-left: 10px;
    width: 18px;
    height: 36px;
    color: #999;
    font-size: 18px;
  }

  .search-icon {
    float: left;
  }

  .popup-btn-close {
    float: right;
    border-left: 1px solid #eee;
    cursor: pointer;
  }

  #no-result {
    position: absolute;
    top: 50%;
    left: 50%;
    color: #ccc;
    transform: translate(-50%, -50%);
  }
}
