.feed-link, .chat {
  margin-top: 10px;

  a {
    border: 1px solid rgb(252, 100, 35) !important;
    border-radius: 4px;
    color: rgb(252, 100, 35);
    display: inline-block;
    padding: 0 15px;

    i {
      color: rgb(252, 100, 35);
    }

    &:hover {
      background: rgb(252, 100, 35);
      color: white;

      i {
        color: white;
      }
    }
  }
}
