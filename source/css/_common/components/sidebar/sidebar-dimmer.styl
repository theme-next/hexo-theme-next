#sidebar-dimmer {
  display: none;
}

+mobile() {
  #sidebar-dimmer {
    position: fixed;
    top: 0;
    left: 100%;
    z-index: $zindex-2;
    display: block;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0;
  }

  .sidebar-active + #sidebar-dimmer {
    opacity: 0.7;
    transition: opacity 0.5s;
    transform: translateX(-100%);
  }
}
