.sidebar-active + #sidebar-dimmer {
  +mobile() {
    opacity: .7;
  }
  transform: translateX(-100%);
  transition: opacity .2s;
}

#sidebar-dimmer {
  display: block;
  position: fixed;
  top: 0;
  left: 100%;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0;
  transition: opacity .2s, transform 0s .2s;
}
