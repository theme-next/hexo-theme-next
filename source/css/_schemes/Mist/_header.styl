// Header
// --------------------------------------------------
.header {
  background: $whitesmoke;
}

.header-inner {
  clearfix();
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 0;

  +mobile() {
    display: block;
    padding: 10px;
    width: auto;
  }
}

.site-meta {
  float: left;
  margin-left: -20px;
  line-height: normal;

  +mobile() {
    margin-left: 10px;
  }

  .brand {
    padding: 2px 1px;
    background: none;

    +mobile() {
      display: block;
    }
  }

  .logo {
    display: none;
  }

  .site-title {
    font-weight: bolder;
  }
}

.logo-line-before, .logo-line-after {
  display: block;
  overflow: hidden;
  margin: 0 auto;
  width: 75%;

  +mobile() {
    display: none;
  }

  i {
    position: relative;
    display: block;
    height: 2px;
    background: $black-deep;

    +mobile() {
      height: 3px;
    }
  }
}

.use-motion {
  .logo-line-before i {
    left: -100%;
  }

  .logo-line-after i {
    right: -100%;
  }
}
