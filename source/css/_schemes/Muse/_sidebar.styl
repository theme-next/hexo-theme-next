if (hexo-config('sidebar.position') == 'right') {
  .sidebar {
    left: auto;
    right: 0;
  }

  .sidebar-toggle, .back-to-top {
    left: auto;
    right: $b2t-position-right;

    +tablet-mobile() {
      right: $b2t-position-right-mobile;
    }
  }

  .book-mark-link {
    left: $b2t-position-right;
  }
}

.sidebar {
  display: none;

  &.sidebar-active {
    display: block;
  }
}
