.site-nav {
  +mobile() {
    left: 0;
    z-index: $zindex-3;
    margin: 0;
    padding: 0;
    width: 100%;
    border-bottom: 1px solid $gray-lighter;
    background: white;
  }
}

.site-nav-toggle {
  top: 50px;
}

.menu {
  +mobile() {
    text-align: left;
  }
}

.menu-item-active a {
  border-bottom-color: $menu-link-hover-border !important;
  color: $black-deep;

  +mobile() {
    border-bottom: 1px dotted $gray-lighter !important;
  }
}

.menu .menu-item {
  +mobile() {
    display: block;
    margin: 0 10px;
    vertical-align: top;
  }

  .badge {
    display: inline-block;
    margin-left: 5px;
    padding: 1px 4px;
    background-color: $gainsboro;
    text-align: center;
    white-space: nowrap;
    font-weight: $font-weight-bolder;
    line-height: 1;

    +mobile() {
      float: right;
      margin: 0.35em 0 0 0;
    }
  }

  br {
    +mobile() {
      display: none;
    }
  }

  a, span.exturl {
    +mobile() {
      padding: 5px 10px;
    }

    &:hover {
      @extend .menu-item-active a;
    }

    // To prevent hover on external links with touch devices after click.
    @media (hover: none) {
      &:hover {
        border-bottom-color: transparent !important;
      }
    }
  }

  .fa {
    +tablet() {
      width: 100%;
    }

    +desktop() {
      width: 100%;
    }
  }
}
