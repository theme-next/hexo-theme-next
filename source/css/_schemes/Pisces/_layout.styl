.header {
  position: relative;
  margin: 0 auto;
  width: $content-desktop;

  +desktop-large() {
    width: $content-desktop-large;
  }

  +desktop-largest() {
    width: $content-desktop-largest;
  }

  +tablet-mobile() {
    width: auto;
  }
}

.header-inner {
  position: absolute;
  top: 0;
  overflow: hidden;
  padding: 0;
  width: $sidebar-desktop;
  border-radius: $border-radius-inner;
  background: white;
  box-shadow: $box-shadow-inner;

  +desktop-large() {
    .container & {
      width: $sidebar-desktop;
    }
  }

  +tablet-mobile() {
    position: relative;
    width: auto;
    border-radius: initial;
  }
}

.main {
  clearfix();
}

.container .main-inner {
  +tablet-mobile() {
    width: auto;
  }
}

.content-wrap {
  float: right;
  box-sizing: border-box;
  padding: $content-desktop-padding;
  min-height: 700px;
  width: $content-wrap;
  border-radius: $border-radius-inner;
  background: white;
  box-shadow: $box-shadow-inner;

  +tablet() {
    padding: 20px;
    width: 100%;
    border-radius: initial;
  }

  +mobile() {
    padding: 20px;
    min-height: auto;
    width: 100%;
    border-radius: initial;
  }
}

.sidebar {
  position: static;
  float: left;
  margin-left: -100%;
  width: $sidebar-desktop;
  background: $body-bg-color;
  box-shadow: none;

  +tablet-mobile() {
    display: none;
  }
}

.sidebar-toggle {
  display: none;
}

.footer-inner {
  padding-left: 260px;

  +tablet-mobile() {
    padding-right: 0 !important;
    padding-left: 0 !important;
    width: auto;
  }
}

.sidebar-position-right {
  .header-inner {
    right: 0;
  }

  .content-wrap {
    float: left;
  }

  .sidebar {
    float: right;
  }

  .footer-inner {
    padding-right: 260px;
    padding-left: 0;
  }
}
