.header {
  margin: 0 auto;
  position: relative;
  width: $content-desktop;

  +desktop-large() {
    width: $content-desktop-large;
  }

  +desktop-largest() {
    width: $content-desktop-largest;
  }

  +tablet-mobile() {
    width: auto;
  }
}

.header-inner {
  background: white;
  border-radius: $border-radius-inner;
  box-shadow: $box-shadow-inner;
  overflow: hidden;
  padding: 0;
  position: absolute;
  top: 0;
  width: $sidebar-desktop;

  +desktop-large() {
    .container & {
      width: $sidebar-desktop;
    }
  }

  +tablet-mobile() {
    border-radius: initial;
    position: relative;
    width: auto;
  }
}

.main {
  clearfix();
}

.container .main-inner {
  +tablet-mobile() {
    width: auto;
  }
}

.content-wrap {
  background: white;
  border-radius: $border-radius-inner;
  box-shadow: $box-shadow-inner;
  box-sizing: border-box;
  float: right;
  min-height: 700px;
  padding: $content-desktop-padding;
  width: $content-wrap;

  +tablet() {
    border-radius: initial;
    padding: 20px;
    width: 100%;
  }

  +mobile() {
    border-radius: initial;
    min-height: auto;
    padding: 20px;
    width: 100%;
  }
}

.sidebar {
  background: $body-bg-color;
  box-shadow: none;
  float: left;
  position: static;
  width: $sidebar-desktop;

  +tablet-mobile() {
    display: none;
  }
}

.sidebar-toggle {
  display: none;
}

.footer-inner {
  padding-left: 260px;

  +tablet-mobile() {
    padding: 0;
    width: auto;
  }
}

if (hexo-config('sidebar.position') == 'right') {
  .header-inner {
    right: 0;
  }

  .content-wrap {
    float: left;
  }

  .sidebar {
    float: right;
  }

  .book-mark-link {
    left: $b2t-position-right;
  }

  .footer-inner {
    padding-left: 0;
    padding-right: 260px;
  }
} else {
  .back-to-top {
    left: auto;
    right: $b2t-position-right;

    +tablet-mobile() {
      right: $b2t-position-right-mobile;
    }
  }
}
