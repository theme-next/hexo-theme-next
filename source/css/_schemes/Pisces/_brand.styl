.site-brand-wrapper {
  position: relative;
}

.site-meta {
  padding: 20px 0;
  color: white;
  background: $black-deep;

  +tablet-mobile() {
    box-shadow: 0 0 16px rgba(0, 0, 0, 0.5);
  }
}

.brand {
  padding: 0;
  background: none;

  &:hover {
   color: white;
  }
}

.site-subtitle {
  margin: 10px 10px 0;
  font-weight: initial;
}

.custom-logo-image {
  margin-top: 20px;
  +tablet-mobile() {
    hide();
  }
}

.site-search form {
  hide();
}
