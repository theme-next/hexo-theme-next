.site-brand-container {
  position: relative;
}

.site-meta {
  background: $black-deep;
  color: white;
  padding: 20px 0;

  +tablet-mobile() {
    box-shadow: 0 0 16px rgba(0, 0, 0, .5);
  }
}

.brand {
  background: none;
  padding: 0;

  &:hover {
    color: white;
  }
}

.site-subtitle {
  font-weight: initial;
  margin: 10px 10px 0;
}

.custom-logo-image {
  margin-top: 20px;

  +tablet-mobile() {
    display: none;
  }
}
